@model List<IU360.Sigma.Mvc.Models.ProdutoViewModel>

@{
    ViewData["Title"] = "Product Datails";
    var succesMessage = TempData["succesMessage"]?.ToString();
    var errormessage = TempData["errormessage"]?.ToString();

}
<h3>@ViewData["Title"]</h3>
<hr/>
@if (!string.IsNullOrWhiteSpace(succesMessage))
{
    <div class="alert alert-success">
        <strong>Succes! </strong>@succesMessage
        <button type="button" class="btnbtn-close floar-end" data-bs-dismiss="alert"></button>
    </div>
}
else if (!string.IsNullOrWhiteSpace(errormessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errormessage
        <button type="button" class="btnbtn-close floar-end" data-bs-dismiss="alert"></button>
    </div>
}
<form>
    <button asp-action="Create" asp-controller="Produto" class="btn btn-primary mb-3"> Create Product</button>
    <table class="table table-responsive table-hover table-bordered">
        <thead>
            <tr class="table-active">
                <th class="text-center">Id</th>
                <th class="text-center">Name</th>
                <th class="text-center">Description</th>
                <th class="text-center">Price</th>
                <th class="text-center">Quantity</th>
                <th class="text-center">Created Date</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach(var produto in Model)
                {
                    <tr>
                        <td class ="text-center">@produto.Id</td>
                        <td>@produto.Name</td>
                        <td>@produto.Description</td>
                        <td class ="text-end">@produto.Price</td>
                        <td>@produto.Quantity</td>
                        <td class="text-center">@produto.CreatedDate</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Produto" asp-action="Edit" asp-route-id="@produto.Id" class="btn
                                    btn-primary">Edit</a>
                                <a asp-controller="Produto" asp-action="Delete" asp-route-id="@produto.Id" class="btn
                                    btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="7">
                        <div>
                            No Products available at this moment!
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

