@model IU360.Sigma.Mvc.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Create Product";
    var errormessage = TempData["errormessage"]?.ToString();

}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errormessage))
{
<div class="alert alert-danger">
    <strong>Error! </strong>@errormessage
        <button type="button" class="btn btn-close floar-end" data-bs-dismiss="alert" arial-label="Close"></button>
</div>
}
<form action="Create" method="post" autocomplete="off">  
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <div class="input-group">
            <span class="input-group-text">R$</span>
            <input type="text" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input type="text" class="form-control" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Created Date</label>
        <input type="date" class="form-control" asp-for="CreatedDate" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}